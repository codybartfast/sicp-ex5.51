(define (sum-of-square-of-two-largest a b c)
  (define (square x) (* x x))
  (define (sum-square a b)
    (+ (square a) (square b)))
  (if (< a b)
      (if (< a c)
          (sum-square b c)
          (sum-square b a))
      (if (< b c)
          (sum-square a c)
          (sum-square a b))))

(define fun sum-of-square-of-two-largest)

(= (fun 10 10 10) 200)

(= (fun 1 10 10) 200)
(= (fun 10 1 10) 200)
(= (fun 10 10 1) 200)

