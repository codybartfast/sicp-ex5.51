(%ex "1.15")

; section 1.2.4, page 44

(define (exptr b n)
  (if (= n 0)
      1
      (* b (exptr b (- n 1)))))

(exptr 2 40)

; section 1.2.4, page 45

(define (expt b n)
  (expt-iter b n 1))

(define (expt-iter b counter product)
  (if (= counter 0)
      product
      (expt-iter b
                (- counter 1)
                (* b product))))

(expt 2 40)

(define (fast-expt b n)
  (cond ((= n 0) 1)
        ((even? n) (square (fast-expt b (/ n 2))))
        (else (* b (fast-expt b (- n 1))))))

(define (even? n)
  (= (remainder n 2) 0))

(fast-expt 2 40)
