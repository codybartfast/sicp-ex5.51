; exercise 1.38, page 71

(define (cont-frac n d k)
  (define (iter i nextTerm)
    (let ((currentTerm (/ (n i) (+ (d i) nextTerm))))
      (if (= i 1)
          currentTerm
          (iter (- i 1) currentTerm))))
  (iter k 0))

(define (e-2 k)
  (define (n i) 1)
  (define (d i)
    (if (= (remainder i 3) 2)
        (* 2 (/ (+ i 1) 3))
        1))
  (cont-frac n d k))

(e-2 1)
