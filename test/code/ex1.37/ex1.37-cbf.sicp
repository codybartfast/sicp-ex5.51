; exercise 1.37, page 71

(define (cont-frac-rec n d k)
  (define (recur i)
    (if (= i k)
        (/ (n i) (d i))
        (/ (n i) (+ (d i) (recur (+ i 1))))))
  (recur 1))

(define (cont-frac-itr n d k)
  (define (iter i nextTerm)
    (let ((currentTerm (/ (n i) (+ (d i) nextTerm))))
      (if (= i 1)
          currentTerm
          (iter (- i 1) currentTerm))))
  (iter k 0))

(define (golden-cf-rec k)
  (cont-frac-rec
        (lambda (i) 1.0)
        (lambda (i) 1.0)
        k))

(define (golden-cf-itr k)
  (cont-frac-itr
        (lambda (i) 1.0)
        (lambda (i) 1.0)
        k))

